---
extends: default

# Ignore Helm chart templates (they use Go templating)
ignore: |
  charts/*/templates/
  .github/workflows/

rules:
  line-length:
    max: 120
    level: warning

  indentation:
    spaces: 2
    indent-sequences: true

  comments:
    min-spaces-from-content: 1

  document-start: disable
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no', 'on', 'off']
