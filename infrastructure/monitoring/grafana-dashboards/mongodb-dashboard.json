{
  "dashboard": {
    "title": "MongoDB Performance",
    "uid": "mongodb-perf",
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "mongodb_connections{state=\"current\"}",
            "legendFormat": "Current connections"
          }
        ]
      },
      {
        "id": 2,
        "title": "Replication Lag",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "mongodb_replset_member_replication_lag",
            "legendFormat": "{{member}} lag"
          }
        ]
      },
      {
        "id": 3,
        "title": "Operations per Second",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(mongodb_op_latencies_ops_total[5m])",
            "legendFormat": "{{type}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "mongodb_memory{type=\"resident\"}",
            "legendFormat": "Resident memory"
          }
        ]
      }
    ]
  }
}
